{
  "project_type": "base",
  "validation": {
    "validation_threshold": 6.0,
    "verification_threshold": 7.0,
    "max_phase_retries": 3
  },
  "quality": {
    "coverage_threshold": 70,
    "coverage_blocking": false,
    "build_required": true,
    "lint_required": false
  },
  "security": {
    "enabled": true,
    "blocking_severities": ["critical", "high"]
  },
  "workflow": {
    "features": {
      "product_validation": true,
      "environment_check": true,
      "build_verification": true,
      "coverage_check": true,
      "security_scan": true,
      "approval_gates": false,
      "task_breakdown": true
    },
    "approval_phases": []
  },
  "task_execution": {
    "max_task_attempts": 3,
    "task_timeout_seconds": 600,
    "test_timeout_seconds": 120
  },
  "integrations": {
    "linear": {
      "enabled": false,
      "team_id": null,
      "create_project": true,
      "status_mapping": {
        "pending": "Backlog",
        "in_progress": "In Progress",
        "completed": "Done",
        "blocked": "Blocked",
        "failed": "Cancelled"
      }
    }
  }
}
