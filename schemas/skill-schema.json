{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Conductor Skill Frontmatter Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "description",
    "version",
    "tags",
    "owner",
    "status"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*$",
      "description": "Skill identifier in kebab-case."
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version for skill content."
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "owner": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50,
      "description": "Owning team or person (e.g. platform, orchestration)."
    },
    "status": {
      "type": "string",
      "enum": ["active", "experimental", "deprecated"]
    }
  }
}
