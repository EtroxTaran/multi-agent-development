{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ImplementerOutput",
  "description": "Schema for A04 Implementer agent output",
  "type": "object",
  "required": ["agent", "task_id", "status", "files_modified"],
  "properties": {
    "agent": {
      "type": "string",
      "const": "A04",
      "description": "Agent identifier"
    },
    "task_id": {
      "type": "string",
      "description": "The task that was implemented"
    },
    "status": {
      "type": "string",
      "enum": ["completed", "partial", "failed", "blocked"],
      "description": "Implementation status"
    },
    "files_created": {
      "type": "array",
      "items": { "type": "string" },
      "description": "New source files created"
    },
    "files_modified": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Existing source files modified"
    },
    "files_deleted": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Files removed during implementation"
    },
    "test_results": {
      "type": "object",
      "required": ["all_pass"],
      "properties": {
        "all_pass": {
          "type": "boolean",
          "description": "Whether all tests pass (required for completion)"
        },
        "passed": { "type": "integer" },
        "failed": { "type": "integer" },
        "skipped": { "type": "integer" },
        "total": { "type": "integer" },
        "coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Code coverage percentage"
        },
        "failed_tests": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "file": { "type": "string" },
              "error": { "type": "string" }
            }
          }
        },
        "execution_time_seconds": { "type": "number" }
      },
      "description": "Test execution results (TDD GREEN phase)"
    },
    "implementation_details": {
      "type": "object",
      "properties": {
        "approach": {
          "type": "string",
          "description": "Brief description of implementation approach"
        },
        "patterns_used": {
          "type": "array",
          "items": { "type": "string" }
        },
        "trade_offs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "choice": { "type": "string" },
              "alternative": { "type": "string" },
              "reason": { "type": "string" }
            }
          }
        }
      }
    },
    "dependencies_added": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "version": { "type": "string" },
          "reason": { "type": "string" }
        }
      },
      "description": "New dependencies added to project"
    },
    "blocking_issues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["test_failure", "missing_dependency", "unclear_requirement", "technical_blocker"]
          },
          "description": { "type": "string" },
          "suggested_resolution": { "type": "string" }
        }
      },
      "description": "Issues that blocked full completion"
    },
    "commit_hash": {
      "type": "string",
      "description": "Git commit hash if changes were committed"
    },
    "notes": {
      "type": "string",
      "description": "Notes for reviewers"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  }
}
