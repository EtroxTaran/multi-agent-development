{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReviewerOutput",
  "description": "Schema for code reviewer and security reviewer outputs (A07, A08)",
  "type": "object",
  "required": ["agent", "task_id", "status", "score", "approved"],
  "properties": {
    "agent": {
      "type": "string",
      "enum": ["A07", "A08"],
      "description": "The reviewer agent ID"
    },
    "task_id": {
      "type": "string",
      "description": "The task being reviewed"
    },
    "status": {
      "type": "string",
      "enum": ["approved", "needs_changes", "rejected", "error"],
      "description": "Review status"
    },
    "score": {
      "type": "number",
      "minimum": 1,
      "maximum": 10,
      "description": "Overall score (7+ required for verification phase)"
    },
    "approved": {
      "type": "boolean",
      "description": "Whether the work is approved to proceed"
    },
    "summary": {
      "type": "string",
      "maxLength": 500,
      "description": "Brief summary of findings"
    },
    "blocking_issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "severity", "description", "location"],
        "properties": {
          "id": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium"]
          },
          "description": { "type": "string" },
          "location": {
            "type": "string",
            "description": "File path and line number"
          },
          "recommendation": { "type": "string" },
          "category": {
            "type": "string",
            "enum": ["security", "correctness", "performance", "maintainability", "testing"]
          }
        }
      },
      "description": "Issues that must be fixed before approval"
    },
    "suggestions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "location": { "type": "string" },
          "recommendation": { "type": "string" }
        }
      },
      "description": "Non-blocking improvement suggestions"
    },
    "security_findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["severity", "type", "description"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low", "info"]
          },
          "type": {
            "type": "string",
            "description": "OWASP category or CWE ID"
          },
          "description": { "type": "string" },
          "location": { "type": "string" },
          "evidence": { "type": "string" },
          "recommendation": { "type": "string" },
          "references": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "description": "Security-specific findings (primarily from A07)"
    },
    "code_quality": {
      "type": "object",
      "properties": {
        "readability": {
          "type": "number",
          "minimum": 1,
          "maximum": 10
        },
        "maintainability": {
          "type": "number",
          "minimum": 1,
          "maximum": 10
        },
        "test_coverage_adequate": { "type": "boolean" },
        "follows_patterns": { "type": "boolean" },
        "notes": { "type": "string" }
      },
      "description": "Code quality metrics (primarily from A08)"
    },
    "files_reviewed": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of files that were reviewed"
    },
    "review_duration_seconds": {
      "type": "integer",
      "description": "Time taken to complete review"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  }
}
