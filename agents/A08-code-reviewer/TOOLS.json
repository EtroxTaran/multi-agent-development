  "tool_descriptions": {
    "Read": "Read code to review for quality and patterns",
    "Grep": "Search for patterns and anti-patterns",
    "Bash(pytest --cov*)": "Check test coverage",
    "Bash(pylint*)": "Check code quality",
    "Bash(mypy*)": "Check type hints"
  },
  "rationale": "Code reviewer is READ ONLY - provides feedback, never modifies code"
}
