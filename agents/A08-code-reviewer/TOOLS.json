{
  "agent_id": "A08",
  "agent_name": "Code Reviewer",
  "description": "Tool policy for code quality reviewer (read-only).",
  "allowed": [
    "Read",
    "Glob",
    "Grep",
    "mcp__Ref__ref_search_documentation",
    "mcp__Ref__ref_read_url"
  ],
  "forbidden": [
    "Write",
    "Edit",
    "Bash"
  ],
  "file_restrictions": {
    "allowed_paths": ["**/*"],
    "forbidden_paths": [],
    "read_only": true
  },
  "budget_limits": {
    "per_invocation_usd": 0.5,
    "per_task_usd": 1.0,
    "fallback_model": "gemini-2.0-flash"
  },
  "timeout_seconds": 600,
  "max_retries": 2,
  "security_restrictions": {
    "forbidden_patterns": [
      "Bash(rm -rf*)",
      "Bash(git push*)",
      "Bash(*--force*delete*)"
    ],
    "require_confirmation": [
      "Bash(docker*)",
      "Bash(kubectl*)",
      "Bash(terraform*)"
    ],
    "secrets_check": true
  },
  "completion_signals": {
    "claude": "<promise>DONE</promise>",
    "cursor": "{\"status\": \"done\"}",
    "gemini": "DONE|COMPLETE"
  },
  "tool_descriptions": {
    "Read": "Review code for quality issues.",
    "Grep": "Search for code smells.",
    "Glob": "Locate review targets."
  },
  "rationale": "Code reviewer is read-only."
}
