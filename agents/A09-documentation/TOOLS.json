{
  "agent_id": "A09",
  "agent_name": "Documentation Writer",
  "description": "Tool restrictions for documentation agent",
  "allowed": [
    "Read",
    "Write",
    "Edit",
    "Grep",
    "Glob",
    "mcp__Ref__ref_search_documentation",
    "mcp__Ref__ref_read_url"
  ],
  "forbidden": [
    "Bash",
    "NotebookEdit"
  ],
  "file_restrictions": {
    "allowed_paths": [
      "docs/**/*",
      "*.md",
      "README*"
    ],
    "forbidden_paths": [
      "src/**/*",
      "tests/**/*",
      "*.py",
      "*.ts",
      "*.js",
      ".workflow/**/*"
    ],
    "read_only": false
  },
  "budget_limits": {
    "per_invocation_usd": 1.0,
    "per_task_usd": 2.0,
    "fallback_model": "sonnet"
  },
  "timeout_seconds": 1800,
  "max_retries": 3,
  "security_restrictions": {
    "forbidden_patterns": [
      "Bash(rm -rf*)",
      "Bash(git push*)",
      "Bash(*--force*delete*)"
    ],
    "require_confirmation": [
      "Bash(docker*)",
      "Bash(kubectl*)",
      "Bash(terraform*)"
    ],
    "secrets_check": true
  },
  "completion_signals": {
    "claude": "<promise>DONE</promise>",
    "cursor": "{\"status\": \"done\"}",
    "gemini": "DONE|COMPLETE"
  },
  "tool_descriptions": {
    "Write": "Create or update documentation files.",
    "Edit": "Refine existing docs."
  },
  "rationale": "Documentation writer edits docs only."
}
