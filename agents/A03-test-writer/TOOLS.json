{
  "agent_id": "A03",
  "agent_name": "Test Writer",
  "description": "Tool policy for unit/integration test authoring.",
  "allowed": [
    "Read",
    "Write",
    "Edit",
    "Glob",
    "Grep",
    "Bash(pytest*)",
    "Bash(npm test*)",
    "Bash(cargo test*)",
    "Bash(go test*)",
    "mcp__Ref__ref_search_documentation",
    "mcp__Ref__ref_read_url"
  ],
  "forbidden": [
    "Bash(rm -rf*)",
    "Bash(git push*)"
  ],
  "file_restrictions": {
    "allowed_paths": [
      "tests/**/*",
      "test/**/*",
      "e2e/**/*",
      "features/**/*",
      "*.feature"
    ],
    "forbidden_paths": [
      "src/**/*",
      "lib/**/*",
      "app/**/*",
      "*.md"
    ],
    "read_only": false
  },
  "budget_limits": {
    "per_invocation_usd": 1.0,
    "per_task_usd": 2.0,
    "fallback_model": "sonnet"
  },
  "timeout_seconds": 1800,
  "max_retries": 3,
  "security_restrictions": {
    "forbidden_patterns": [
      "Bash(rm -rf*)",
      "Bash(git push*)",
      "Bash(*--force*delete*)"
    ],
    "require_confirmation": [
      "Bash(docker*)",
      "Bash(kubectl*)",
      "Bash(terraform*)"
    ],
    "secrets_check": true
  },
  "completion_signals": {
    "claude": "<promise>DONE</promise>",
    "cursor": "{\"status\": \"done\"}",
    "gemini": "DONE|COMPLETE"
  },
  "tool_descriptions": {
    "Write": "Create new test files.",
    "Edit": "Update existing tests.",
    "Bash(pytest*)": "Run Python test suite."
  },
  "rationale": "Test Writer can modify test files only."
}
