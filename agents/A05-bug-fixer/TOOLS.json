{
  "agent_id": "A05",
  "agent_name": "Bug Fixer",
  "description": "Tool policy for bug fixing agent.",
  "allowed": [
    "Read",
    "Write",
    "Edit",
    "Glob",
    "Grep",
    "Bash(pytest*)",
    "Bash(python -m pytest*)",
    "Bash(npm test*)",
    "Bash(python -c*)",
    "mcp__Ref__ref_search_documentation",
    "mcp__Ref__ref_read_url"
  ],
  "forbidden": [
    "Bash(rm -rf*)",
    "Bash(git push*)"
  ],
  "file_restrictions": {
    "allowed_paths": ["src/**/*", "tests/**/*", "test/**/*"],
    "forbidden_paths": ["*.md", ".board/**/*"],
    "read_only": false
  },
  "budget_limits": {
    "per_invocation_usd": 2.0,
    "per_task_usd": 4.0,
    "fallback_model": "codex-5.2"
  },
  "timeout_seconds": 2400,
  "max_retries": 5,
  "security_restrictions": {
    "forbidden_patterns": [
      "Bash(rm -rf*)",
      "Bash(git push*)",
      "Bash(*--force*delete*)"
    ],
    "require_confirmation": [
      "Bash(docker*)",
      "Bash(kubectl*)",
      "Bash(terraform*)"
    ],
    "secrets_check": true
  },
  "completion_signals": {
    "claude": "<promise>DONE</promise>",
    "cursor": "{\"status\": \"done\"}",
    "gemini": "DONE|COMPLETE"
  },
  "tool_descriptions": {
    "Read": "Read error logs, stack traces, source code.",
    "Edit": "Apply minimal bug fixes.",
    "Bash(python -c*)": "Quick debugging snippets."
  },
  "rationale": "Bug fixer can modify both src and tests when needed."
}
