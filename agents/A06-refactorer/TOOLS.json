{
  "agent_id": "A06",
  "agent_name": "Refactorer",
  "description": "Tool restrictions for code refactoring agent",
  "allowed": [
    "Read",
    "Write",
    "Edit",
    "Grep",
    "Glob",
    "Bash(pytest*)",
    "Bash(npm test*)",
    "Bash(npx jest*)",
    "mcp__Ref__ref_search_documentation",
    "mcp__Ref__ref_read_url"
  ],
  "forbidden": [
    "Bash(rm*)",
    "Bash(git push*)",
    "Bash(curl*)",
    "Bash(wget*)"
  ],
  "file_restrictions": {
    "allowed_paths": [
      "src/**/*",
      "lib/**/*",
      "app/**/*"
    ],
    "forbidden_paths": [
      "tests/**/*",
      "test/**/*",
      "*.md",
      ".workflow/**/*"
    ],
    "read_only": false
  },
  "budget_limits": {
    "per_invocation_usd": 1.0,
    "per_task_usd": 2.0,
    "fallback_model": "gemini-2.0-flash"
  },
  "timeout_seconds": 1800,
  "max_retries": 3,
  "security_restrictions": {
    "forbidden_patterns": [
      "Bash(rm -rf*)",
      "Bash(git push*)",
      "Bash(*--force*delete*)"
    ],
    "require_confirmation": [
      "Bash(docker*)",
      "Bash(kubectl*)",
      "Bash(terraform*)"
    ],
    "secrets_check": true
  },
  "completion_signals": {
    "claude": "<promise>DONE</promise>",
    "cursor": "{\"status\": \"done\"}",
    "gemini": "DONE|COMPLETE"
  },
  "tool_descriptions": {
    "Edit": "Refactor source code while preserving behavior.",
    "Bash(npm test*)": "Run test suite after refactor."
  },
  "rationale": "Refactorer can modify source code but not tests."
}
