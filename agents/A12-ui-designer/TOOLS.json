{
  "agent_id": "A12",
  "agent_name": "UI Designer",
  "description": "Tool restrictions for UI/component design agent",
  "allowed": [
    "Read",
    "Write",
    "Edit",
    "Grep",
    "Glob",
    "Bash(npm*)",
    "Bash(npx shadcn*)",
    "mcp__shadcn__*",
    "mcp__Ref__ref_search_documentation",
    "mcp__Ref__ref_read_url"
  ],
  "forbidden": [
    "Bash(rm*)",
    "Bash(git push*)"
  ],
  "file_restrictions": {
    "allowed_paths": [
      "src/components/**/*",
      "src/ui/**/*",
      "src/styles/**/*",
      "*.css",
      "*.scss",
      "*.tsx"
    ],
    "forbidden_paths": [
      "tests/**/*",
      "test/**/*",
      "*.md",
      ".workflow/**/*"
    ],
    "read_only": false
  },
  "budget_limits": {
    "per_invocation_usd": 1.0,
    "per_task_usd": 2.0,
    "fallback_model": "sonnet"
  },
  "timeout_seconds": 1800,
  "max_retries": 3,
  "security_restrictions": {
    "forbidden_patterns": [
      "Bash(rm -rf*)",
      "Bash(git push*)",
      "Bash(*--force*delete*)"
    ],
    "require_confirmation": [
      "Bash(docker*)",
      "Bash(kubectl*)",
      "Bash(terraform*)"
    ],
    "secrets_check": true
  },
  "completion_signals": {
    "claude": "<promise>DONE</promise>",
    "cursor": "{\"status\": \"done\"}",
    "gemini": "DONE|COMPLETE"
  },
  "tool_descriptions": {
    "Write": "Create UI components and styles.",
    "Bash(npx shadcn*)": "Scaffold UI components."
  },
  "rationale": "UI designer modifies component and style files only."
}
