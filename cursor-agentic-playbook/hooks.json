{
  "version": 1,
  "hooks": {
    "beforeShellExecution": [
      { "command": "python3 ./hooks/guard-shell.py" },
      { "command": "python3 ./hooks/precommit-checks.py" }
    ],
    "afterShellExecution": [
      { "command": "python3 ./hooks/audit-log.py" }
    ],
    "beforeMCPExecution": [
      { "command": "python3 ./hooks/audit-log.py" }
    ],
    "afterMCPExecution": [
      { "command": "python3 ./hooks/audit-log.py" }
    ],
    "afterFileEdit": [
      { "command": "python3 ./hooks/format-after-edit.py" },
      { "command": "python3 ./hooks/audit-log.py" }
    ],
    "preCompact": [
      { "command": "python3 ./hooks/audit-log.py" }
    ],
    "stop": [
      { "command": "python3 ./hooks/audit-log.py" }
    ]
  }
}
